	int n, c, k;
	int array[8];
	
	printf("Enter an integer in decimal number system\n");
	scanf("%d", &n);
	
	printf("%d in binary number system is:\n", n);
	
	for (c = 0; c <= 8; c++)
	{
		k = n >> c;
		
		if (k & 1)
			array[c] = 1;
		else
			array[c] = 0;
	}
	
	printf("\n");
	
	for (int i = 0; i < 8; i++)
	{
		printf("%d", array[i]);
	}
